            <layers>
                <li>Overhead</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <tags>
                <li>HRK_UNSC_MarineHelmet</li>
            </tags>
        </apparel>
        <comps>
            <li Class="CompProperties_Biocodable"/>
        </comps>
    </ThingDef>

