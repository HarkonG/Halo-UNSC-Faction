<Defs>

    <!-- Helmet -->
    <ThingDef ParentName="HRK_UNSC_ArmorHelmetMakeableBase">
        <defName>HRK_UNSC_MarineHelmet</defName>
        <label>Marine helmet</label>
        <description>_</description>
        <graphicData>
            <texPath>Things/Apparel/Marine/Marine_Helmet_UI</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <generateCommonality>2</generateCommonality>
        <statBases>
            <WorkToMake>15750</WorkToMake>
            <MaxHitPoints>120</MaxHitPoints>
            <Mass>1</Mass>
            <Flammability>0.4</Flammability>
            <ArmorRating_Sharp>0.92</ArmorRating_Sharp>
