<?xml version="1.0" encoding="utf-8" ?>

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded - Laser</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ResearchProjectDef>
                            <defName>HALO_Research_UNSC_Lasers</defName>
                            <label>UNSC Lasers</label>
                            <description>Learn to craft the SPARTAN Laser, a high powered single shot laser user by UNSC's SPARTANs capable of killing any foe.</description>
                            <baseCost>3000</baseCost>
                            <prerequisites>
                                <li>HALO_Research_UNSC_AdvancedFirearms</li>
                            </prerequisites>
                            <requiredResearchFacilities>
                                <li>MultiAnalyzer</li>
                                <li>HALO_UNSC_ResearchTerminal</li>
                            </requiredResearchFacilities>
                            <techLevel>Industrial</techLevel>
                            <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
                            <researchViewX>3.00</researchViewX>
                            <researchViewY>1.15</researchViewY>
                            <tab>HALO_ResearchTab_HALO</tab>
                            <techprintCount>2</techprintCount>
                            <techprintCommonality>1</techprintCommonality>
                            <techprintMarketValue>3000</techprintMarketValue>
                            <heldByFactionCategoryTags>
                                <li>HALO_UNSC_FactionTag</li>
                            </heldByFactionCategoryTags>
                        </ResearchProjectDef>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef ParentName="VWEL_Bullet_LaserGeneric" Class="VanillaWeaponsExpandedLaser.LaserBeamDef">
                            <defName>HALO_UNSC_Bullet_SpartanLaser</defName>
                            <label>Spartan Laser shot</label>
                            <description>Spartan Laser shot</description>
                            <textures>
                                <li>Things/Projectile/Shot_SalvagedLaserRifle</li>
                            </textures>
                            <seam>0.15</seam>
                            <causefireChance>0.8</causefireChance>
                            <beamWidth>1.6</beamWidth>
                            <lifetime>240</lifetime>
                            <projectile>
                                <damageDef>Burn</damageDef>
                                <damageAmountBase>500</damageAmountBase>
                                <armorPenetrationBase>1</armorPenetrationBase>
                                <stoppingPower>6</stoppingPower>
                            </projectile>
                        </ThingDef>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <ThingDef ParentName="BaseLaserGun">
                            <defName>HALO_UNSC_SpartanLaser</defName>
                            <thingClass>VanillaWeaponsExpandedLaser.LaserGun</thingClass>
                            <label>Spartan Laser</label>
                            <description>The Weapon/Anti-Vehicle Model 6 Grindell/Galilean Nonlinear Rifle (W/AV M6 G/GNR), colloquially known as the Spartan Laser, is a man-portable and vehicle-mounted solid-state directed-energy anti-vehicle weapon used by the United Nations Space Command. It is one of the few directed energy weapons fielded by UNSC forces, aside from the pulse lasers used by Office of Naval Intelligence prowlers and the X23 NNEMP Cannon used by Gremlin Combat Support Vehicles.</description>
                            <graphicData>
                                <texPath>Things/Weapons/HALO_UNSC_SpartanLaser</texPath>
                                <graphicClass>Graphic_Single</graphicClass>
                                <drawSize>1.2</drawSize>
                            </graphicData>
                            <equippedAngleOffset>45</equippedAngleOffset>
                            <soundInteract>HALO_UNSC_Interact_SpartanLaser</soundInteract>
                            <statBases>
                                <MarketValue>2500</MarketValue>
                                <WorkToMake>110000</WorkToMake>
                                <Mass>3.7</Mass>
                                <AccuracyTouch>0.63</AccuracyTouch>
                                <AccuracyShort>0.86</AccuracyShort>
                                <AccuracyMedium>0.93</AccuracyMedium>
                                <AccuracyLong>0.92</AccuracyLong>
                                <RangedWeapon_Cooldown>2.2</RangedWeapon_Cooldown>
                            </statBases>
                            <costList Inherit="False">
                                <Steel>1</Steel>
                            </costList>
                            <recipeMaker Inherit="False">
                            </recipeMaker>
                            <techLevel>Spacer</techLevel>
                            <weaponTags Inherit="False">
                                <li>HALO_UNSC_SpartanLaser</li>
                            </weaponTags>
                            <generateCommonality>0.1</generateCommonality>
                            <equippedStatOffsets>
                                <MoveSpeed>-0.15</MoveSpeed>
                            </equippedStatOffsets>
                            <verbs>
                                <li>
                                    <verbClass>Verb_ShootOneUse</verbClass>
                                    <hasStandardCommand>true</hasStandardCommand>
                                    <defaultProjectile>HALO_UNSC_Bullet_SpartanLaser</defaultProjectile>
                                    <warmupTime>2.2</warmupTime>
                                    <range>48</range>
                                    <burstShotCount>1</burstShotCount>
                                    <soundCast>HALO_UNSC_Shot_SpartanLaser</soundCast>
                                    <soundCastTail>GunTail_Heavy</soundCastTail>
                                    <onlyManualCast>true</onlyManualCast>
                                    <stopBurstWithoutLos>false</stopBurstWithoutLos>
                                    <muzzleFlashScale>14</muzzleFlashScale>
                                    <targetParams>
                                        <canTargetLocations>true</canTargetLocations>
                                    </targetParams>
                                </li>
                            </verbs>
                            <comps>
                                <li>
                                    <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
                                </li>
                            </comps>
                            <tools>
                                <li>
                                    <label>barrel</label>
                                    <capacities>
                                        <li>Blunt</li>
                                    </capacities>
                                    <power>5</power>
                                    <cooldownTime>1.8</cooldownTime>
                                </li>
                                <li>
                                    <label>grip</label>
                                    <capacities>
                                        <li>Blunt</li>
                                    </capacities>
                                    <power>6</power>
                                    <cooldownTime>1.9</cooldownTime>
                                </li>
                            </tools>
                            <thingCategories Inherit="False">
                                <li>HALO_Category_UNSC_Weapons</li>
                            </thingCategories>
                            <thingSetMakerTags Inherit="False">
                            </thingSetMakerTags>
                            <tradeTags Inherit="False">
                                <li>HALO_UNSC_Weapon</li>
                            </tradeTags>
                        </ThingDef>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>/Defs</xpath>
                    <value>
                        <RecipeDef>
                            <defName>HALO_UNSC_RecipeDef_SpartanLaser</defName>
                            <label>make UNSC Spartan Laser x2</label>
                            <description>Craft 2 UNSC Spartan Lasers.</description>
                            <jobString>Making UNSC Spartan Lasers.</jobString>
                            <workAmount>4000</workAmount>
                            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
                            <workSkill>Crafting</workSkill>
                            <recipeUsers>
                                <li>FabricationBench</li>
                            </recipeUsers>
                            <ingredients>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Steel</li>
                                        </thingDefs>
                                    </filter>
                                    <count>30</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>Plasteel</li>
                                        </thingDefs>
                                    </filter>
                                    <count>20</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>ComponentIndustrial</li>
                                        </thingDefs>
                                    </filter>
                                    <count>6</count>
                                </li>
                                <li>
                                    <filter>
                                        <thingDefs>
                                            <li>ComponentSpacer</li>
                                        </thingDefs>
                                    </filter>
                                    <count>1</count>
                                </li>
                            </ingredients>
                            <fixedIngredientFilter>
                                <thingDefs>
                                    <li>Steel</li>
                                    <li>Plasteel</li>
                                    <li>ComponentIndustrial</li>
                                    <li>ComponentSpacer</li>
                                </thingDefs>
                            </fixedIngredientFilter>
                            <products>
                                <HALO_UNSC_SpartanLaser>2</HALO_UNSC_SpartanLaser>
                            </products>
                            <researchPrerequisite>HALO_Research_UNSC_Lasers</researchPrerequisite>
                        </RecipeDef>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>